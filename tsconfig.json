{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "paths": { "@/*": ["./src/*"] }
  },
  "include": [
    "next-env.d.ts",
    "src/app/**/*.ts",
    "src/app/**/*.tsx",
    "src/components/**/*.ts",
    "src/components/**/*.tsx",
    "src/sections/**/*.ts",
    "src/sections/**/*.tsx",
    "src/data/**/*.ts",
    "src/hooks/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "nextdefapp", "dist", "web", "studio-shahabudidnirfan.com", "src/Portfolio.tsx", "src/App.tsx", "src/index.tsx", "src/index.css"]
}
